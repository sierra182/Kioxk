                <div tabindex="0" role="button" aria-label="affiche l'adresse e-mail">
                    <div>
                        <a href="mailto:location@gmail.com">location@gmail.com</a>
                    </div>
                    <div>
                        <picture>
                        <source srcset="/item/mail.webp 512w" type="image/webp">
