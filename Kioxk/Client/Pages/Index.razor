        //    }
        //}
    }

    int b;
    [JSInvokable]
    public void CSharpLamb(int ce)
    {
        b = 0;
        StateHasChanged();
        b = ce;
        StateHasChanged();
    }

    string? pnter;
    bool tog_pnter = true;

    protected override void OnInitialized()
    {
        StateHasChanged();

        myevents.MyPointer += () =>
        {
            if (tog_pnter)
            {
                tog_pnter = false;
                pnter = "none";
                StateHasChanged();
            }
            else
            {
                tog_pnter = true;
                pnter = "initial";
                StateHasChanged();
            }
        };
    }

}
