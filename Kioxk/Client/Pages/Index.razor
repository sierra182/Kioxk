<header id="header">
    <div>
        <div id="lambcont">
            @for (int i = 0; i < b; i++)
            {
                <Lamb />
            }

        </div>
        <div id="louCont">
            <h1> Le Chalet des Marmottes <br /> <em>La Plaine des Cafres - Ile de la Réunion</em></h1>
        </div>


    </div>

    <div id="contact">
